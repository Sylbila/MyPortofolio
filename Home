    <script>
      var typed = new Typed("#title", {
        strings: [
          "WELCOME TO MY PORTFOLIO BELOW YOU CAN FIND MY BIODATA, RESUME, AND MY PROJECTS.",
        ],
        typeSpeed: 78,
        loop: false,
      });
      window.addEventListener("scroll", function () {
        var swipe1 = document.getElementById("swipe");
        var swipe2 = document.getElementById("swipe2");
        var swipe3 = document.getElementById("swipe3");
        var swipe4 = document.getElementById("swipe4");
        var scrollPosition = window.scrollY;

        if (scrollPosition > 200) {
          swipe1.classList.remove("-translate-x-full"); // Menghapus kelas untuk membuat tombol muncul
          swipe2.classList.remove("-translate-x-full"); // Menghapus kelas untuk membuat tombol muncul
          swipe3.classList.remove("-translate-x-full"); // Menghapus kelas untuk membuat tombol muncul
          swipe4.classList.remove("-translate-x-full"); // Menghapus kelas untuk membuat tombol muncul
        } else {
          swipe1.classList.add("-translate-x-full"); // Menambahkan kelas untuk menyembunyikan tombol kembali
          swipe2.classList.add("-translate-x-full"); // Menambahkan kelas untuk menyembunyikan tombol kembali
          swipe3.classList.add("-translate-x-full"); // Menambahkan kelas untuk menyembunyikan tombol kembali
          swipe4.classList.add("-translate-x-full"); // Menambahkan kelas untuk menyembunyikan tombol kembali
        }
      });
    </script>
